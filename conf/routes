# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /assets/javascripts/routes  controllers.Application.jsRoutes
GET     /csvParser                 controllers.Application.csvParser

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

POST	/login						controllers.Users.login()
GET		/logout						controllers.Users.logout()

POST    /users/new                  controllers.Users.insert()
GET     /users/info                 controllers.Users.info()

GET     /requests/info              controllers.Requests.createInfo()
POST	/requests/new				controllers.Requests.insert()
POST    /requests/:id/signoff       controllers.Requests.signoff(id: Int)
POST    /requests/:id/attach        controllers.Requests.attach(id: Int)

POST    /agencies/new               controllers.Agencies.insert()

# view routes (these all serve the index view)

GET     /projects                   controllers.Application.index
GET     /projects/new               controllers.Application.index
GET     /projects/:id               controllers.Application.index1(id: Int)
GET     /dashboard                  controllers.Application.index
GET     /user/:id                   controllers.Application.index1(id: Int)
GET     /admin                      controllers.Application.index
GET     /agencies/new               controllers.Application.index
GET     /agencies/:id               controllers.Application.index1(id: Int)
GET     /login                      controllers.Application.index
