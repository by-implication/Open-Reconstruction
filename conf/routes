# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /assets/javascripts/routes  controllers.Application.jsRoutes
GET     /csvParser                  controllers.Application.csvParser

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

POST    /login                      controllers.Users.login()
GET     /logout                     controllers.Users.logout()

GET     /users/info                 controllers.Users.info()
GET     /users/:id/meta             controllers.Users.viewMeta(id: Int)

GET	  	/requests					          controllers.Requests.index()
GET     /requests/info              controllers.Requests.createInfo()
POST    /requests/new               controllers.Requests.insert()
GET     /requests/:id/meta          controllers.Requests.viewMeta(id: Int)
POST    /requests/:id/signoff       controllers.Requests.signoff(id: Int)
POST	  /requests/:id/comment		    controllers.Requests.comment(id: Int)
POST    /requests/:id/reviseAmount  controllers.Requests.reviseAmount(id: Int)
POST	  /requests/:rid/assign/assessing/:aid	   controllers.Requests.assignAssessingAgency(rid: Int, aid: Int)
POST    /requests/:rid/assign/implementing/:aid  controllers.Requests.assignImplementingAgency(rid: Int, aid: Int)
POST    /requests/:id/edit/:f       controllers.Requests.editField(id: Int, f: String)

POST    /requests/:id/attach/:type  controllers.Attachments.add(id: Int, type: String)
GET	    /attachments/:id/preview    controllers.Attachments.preview(id: Int)
GET	    /attachments/:id/download   controllers.Attachments.download(id: Int)
GET	    /attachments/:id/thumb		controllers.Attachments.thumb(id: Int)
POST    /attachments/:id/archive    controllers.Attachments.archive(id: Int)
POST    /attachments/:id/unarchive  controllers.Attachments.unarchive(id: Int)

GET     /agencies/all/meta          controllers.GovUnits.allMeta()
GET     /agencies/new/meta          controllers.GovUnits.createMeta()
GET     /agencies/:id/meta          controllers.GovUnits.viewMeta(id: Int)
POST    /agencies/new               controllers.GovUnits.insert()
POST    /agencies/:id/newUser       controllers.Users.insert(id: Int)

GET     /agencies/lgus/list         controllers.GovUnits.lguListing()
GET     /lgus/new/:l/:id/meta       controllers.GovUnits.lguCreationMeta(l: Int, id: Int)
POST    /lgus/new/:l/:id            controllers.GovUnits.lguInsert(l: Int, id: Int)

# view routes (these all serve the index view)

GET     /projects                   controllers.Application.index
GET     /projects/all               controllers.Application.index
GET     /projects/mine              controllers.Application.index
GET     /projects/assessor          controllers.Application.index
GET     /projects/signoff           controllers.Application.index
GET     /projects/new               controllers.Application.index
GET     /projects/:x                controllers.Application.index1(x: Int)
GET     /projects/:x/assignments    controllers.Application.index1(x: Int)
GET     /projects/:x/images         controllers.Application.index1(x: Int)
GET     /projects/:x/documents      controllers.Application.index1(x: Int)
GET     /projects/:x/activity       controllers.Application.index1(x: Int)
GET     /dashboard                  controllers.Application.index
GET     /users/:x                   controllers.Application.index1(x: Int)
GET     /admin                      controllers.Application.index
GET     /admin/lgus                 controllers.Application.index
GET     /agencies/new               controllers.Application.index
GET     /agencies/:x/newUser        controllers.Application.index1(x: Int)
GET     /agencies/:x                controllers.Application.index1(x: Int)
GET     /login                      controllers.Application.index
GET     /lgus/new/:x/:y             controllers.Application.index2(x: Int, y: Int)
