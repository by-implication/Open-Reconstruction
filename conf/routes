# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET     /                                         controllers.Application.index
GET     /welcome                                  controllers.Application.welcome
GET     /populate                                 controllers.Application.populate
GET     /dashboard                                controllers.Application.dashboard
GET     /dashboard/meta                           controllers.Application.dashboardMeta
GET     /saro                                     controllers.Application.saro
GET     /process                                  controllers.Application.process
GET     /assets/javascripts/routes/play.js        controllers.Application.jsRoutes
GET     /csvParser                                controllers.Application.csvParser
GET     /lguParser                                controllers.Application.lguParser
GET     /admin                                    controllers.Application.admin
GET     /admin/lgus                               controllers.Application.adminLgus
GET     /admin/lgus/meta                          controllers.GovUnits.listLgus
GET     /admin/lgus/:l/:id                        controllers.GovUnits.getChildren(l: Int, id: Int)
GET     /admin/agencies                           controllers.Application.adminAgencies
GET     /admin/agencies/meta                      controllers.GovUnits.listAgencies
GET     /admin/types/project                      controllers.Admin.projectTypes
GET     /admin/types/project/meta                 controllers.Admin.projectTypesMeta
GET     /admin/types/disaster                     controllers.Admin.disasterTypes
GET     /admin/types/disaster/meta                controllers.Admin.disasterTypesMeta
POST    /admin/types/:k/new                       controllers.Admin.insertType(k: String)
POST    /admin/types/:k/:id                    		controllers.Admin.updateType(k: String, id: Int)

# Map static resources from the /public folder to the /assets URL path

GET     /assets/*file                             controllers.Assets.at(path="/public", file)

GET     /login                                    controllers.Users.login
POST    /login                                    controllers.Users.authenticate
GET     /logout                                   controllers.Users.logout

GET     /users/meta                               controllers.Users.meta
GET     /users/:id                                controllers.Users.view(id: Int)
GET     /users/:id/meta                           controllers.Users.viewMeta(id: Int)

GET			/requests																	controllers.Requests.index
GET     /requests/:t/:p/:pid                      controllers.Requests.indexPage(t: String, p: Int, pid: Int, locFilters: String)
GET     /requests/:t/:p/:pid/meta                 controllers.Requests.indexMeta(t: String, p: Int, pid: Int, locFilters: String)


GET     /requests/new                             controllers.Requests.create
GET     /requests/new/meta                        controllers.Requests.createMeta
POST    /requests/new                             controllers.Requests.insert

GET     /requests/:id                             controllers.Requests.view(id: Int)
GET     /requests/:id/assignments                 controllers.Requests.viewAssignments(id: Int)
GET     /requests/:id/images                      controllers.Requests.viewImages(id: Int)
GET     /requests/:id/documents                   controllers.Requests.viewDocuments(id: Int)
GET     /requests/:id/activity                    controllers.Requests.viewActivity(id: Int)
GET     /requests/:id/references                  controllers.Requests.viewReferences(id: Int)
GET     /requests/:id/meta                        controllers.Requests.viewMeta(id: Int)
POST    /requests/:id/new-project                 controllers.Projects.insert(id: Int)

POST    /requests/:id/signoff                     controllers.Requests.signoff(id: Int)
POST    /requests/:id/reject                      controllers.Requests.reject(id: Int)
POST    /requests/:id/assign-saro                  controllers.Requests.assignSaro(id: Int)
POST    /requests/:id/comment                     controllers.Requests.comment(id: Int)
POST    /requests/:id/edit/:f                     controllers.Requests.editField(id: Int, f: String)
POST    /requests/:id/attach/:type                controllers.Attachments.add(id: Int, type: String)

GET     /visualizations/data/:v                   controllers.Visualizations.getData(v: String)
GET     /visualizations/:v                        controllers.Visualizations.view(v: String)

GET     /attachments/:id/preview                  controllers.Attachments.preview(id: Int)
GET     /attachments/:id/download                 controllers.Attachments.download(id: Int)
GET     /attachments/:id/thumb                    controllers.Attachments.thumb(id: Int)
POST    /attachments/:id/archive                  controllers.Attachments.archive(id: Int)
POST    /attachments/:id/unarchive                controllers.Attachments.unarchive(id: Int)

GET     /gov-units/new/agency                     controllers.GovUnits.createAgency
GET     /gov-units/new/agency/meta                controllers.GovUnits.createAgencyMeta
POST    /gov-units/new/agency                     controllers.GovUnits.insertAgency
GET     /gov-units/new/lgu/:l/:id                 controllers.GovUnits.createLgu(l: Int, id: Int)
GET     /gov-units/new/lgu/:l/:id/meta            controllers.GovUnits.createLguMeta(l: Int, id: Int)
POST    /gov-units/new/lgu/:l/:id                 controllers.GovUnits.insertLgu(l: Int, id: Int)
GET     /gov-units/:id                            controllers.GovUnits.view(id: Int)
GET     /gov-units/:id/meta                       controllers.GovUnits.viewMeta(id: Int)
GET     /gov-units/:id/edit                       controllers.GovUnits.edit(id: Int)
GET     /gov-units/:id/edit/meta                  controllers.GovUnits.editMeta(id: Int)
POST    /gov-units/:id/edit                       controllers.GovUnits.update(id: Int)
GET     /gov-units/:id/new-user                   controllers.Users.create(id: Int)
POST    /gov-units/:id/new-user                   controllers.Users.insert(id: Int)
